{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "foreground": "lightBlue",
                    "style": "plain",
                    "type": "text",
                    "template": "# "
                },
                {
                    "foreground": "lightBlue",
                    "style": "plain",
                    "type": "session",
                    "template": "{{ .UserName }} "
                },
                {
                    "foreground": "white",
                    "style": "plain",
                    "type": "session",
                    "template": "@"
                },
                {
                    "foreground": "green",
                    "style": "plain",
                    "type": "session",
                    "template": "pwsh "
                },
                {
                    "foreground": "lightGreen",
                    "style": "plain",
                    "type": "session",
                    "template": "{{ .HostName }} "
                },
                {
                    "foreground": "white",
                    "style": "plain",
                    "type": "session",
                    "template": "in "
                },
                {
                    "foreground": "lightYellow",
                    "style": "plain",
                    "type": "path",
                    "template": "{{ .Path }} "
                },
                {
                    "foreground": "white",
                    "style": "plain",
                    "type": "session",
                    "template": "on "
                },
                {
                    "properties": {
                        "fetch_status": true
                    },
                    "style": "plain",
                    "type": "git",
                    "template": "git: "
                },
                {
                    "foreground": "lightBlue",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": false,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    },
                    "style": "plain",
                    "type": "git",
                    "template": "{{ .HEAD }} "
                },
                {
                    "properties": {
                        "fetch_status": true
                    },
                    "foreground": "red",
                    "style": "plain",
                    "type": "git",
                    "template": "{{ if .Working.Changed }}x{{ end }} "
                },
                {
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "foreground": "darkGray",
                    "style": "plain",
                    "type": "time",
                    "template": " [{{ .CurrentDate | date .Format }}]"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightRed",
                    "style": "plain",
                    "type": "text",
                    "template": "$"
                }
            ]
        }
    ],
    "version": 3,
    "final_space": true
}